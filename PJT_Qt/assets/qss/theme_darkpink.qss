/* =========================
   Base (Pink-Tech)
========================= */
QMainWindow {
  background: #0f0b12;   /* Îã§ÌÅ¨ ÌçºÌîåÎ∏îÎûô */
}

QLabel {
  color: #f2eaf2;
  font-size: 13px;
}


/* =========================
   Navigation Frame
========================= */
QFrame#frame_nav {
  background: #17101d;              /* Îã§ÌÅ¨ ÌîåÎüº */
  border: 1px solid #3a2448;        /* ÌçºÌîå-Î°úÏ¶à ÎùºÏù∏ */
  border-radius: 12px;
}


/* =========================
   Buttons
========================= */
QPushButton {
  background: #1b1322;
  border: 1px solid #3a2448;
  border-radius: 12px;
  color: #fff3ff;
  padding: 8px 14px;
  font-size: 13px;
}

QPushButton:hover {
  background: #24192e;
  border: 1px solid #ff5aa5;        /* üíó Ìè¨Ïù∏Ìä∏ ÌïëÌÅ¨ */
}

QPushButton:checked {
  background: #2a1c35;
  border: 1px solid #ff5aa5;
}


/* =========================
   GroupBox
========================= */
QGroupBox {
  color: #f2eaf2;
  border: 1px solid #3a2448;
  border-radius: 14px;
  margin-top: 10px;
}

QGroupBox::title {
  subcontrol-origin: margin;
  left: 12px;
  padding: 0 6px;
  color: #d9b7d9;                  /* Ïó∞Ìïú Î°úÏ¶à ÎùºÎ≤® */
}


/* =========================
   Cards (Overview Ìè¨Ìï®)
========================= */
QFrame#card,
QFrame#card_batt,
QFrame#card_co2_max,
QFrame#card_co2_cur,
QFrame#card_temp {
  background: #17101d;
  border: 1px solid #3a2448;
  border-radius: 18px;
  padding: 8px;
}

QFrame#card QLabel,
QFrame#card_batt QLabel,
QFrame#card_co2_max QLabel,
QFrame#card_co2_cur QLabel,
QFrame#card_temp QLabel {
  color: #fff3ff;
}


/* =========================
   Card Typography
========================= */
QLabel#cardTitle {
  color: #d9b7d9;
  font-size: 12px;
  font-weight: 400;
}

QLabel#lbl_batt_value,
QLabel#lbl_task_value,
QLabel#lbl_time_value,
QLabel#lbl_temp_value {
  color: #ffffff;
  font-size: 30px;
  font-weight: 700;
}

QLabel#cardUnit {
  color: #d9b7d9;
  font-size: 12px;
}


/* =========================
   Text / Tables
========================= */
QTextEdit {
  background: #0c0810;
  border: 1px solid #3a2448;
  border-radius: 14px;
  color: #f2eaf2;
}

QTableWidget {
  background: #0c0810;
  border: 1px solid #3a2448;
  border-radius: 14px;
  color: #f2eaf2;
  gridline-color: #3a2448;
}

QHeaderView::section {
  background: #17101d;
  color: #f2eaf2;
  border: 1px solid #3a2448;
}


/* =========================
   MAP THEME TOKENS (Pink-Tech)
========================= */
QGraphicsView#mapView {
  background: #0c0810;
  border: 1px solid #3a2448;
  border-radius: 14px;

  /* QSS Theme Tokens */
}
